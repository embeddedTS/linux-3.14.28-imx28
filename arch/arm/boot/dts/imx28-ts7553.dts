/dts-v1/;
#include "imx28.dtsi"
#include "dt-bindings/gpio/gpio.h"
#include <dt-bindings/interrupt-controller/irq.h>

/ {

	model = "embeddedTS i.MX28 TS-7553-v2 (Default Device Tree)";
	compatible = "fsl,imx28-ts7553", "fsl,imx28";

	aliases {
		mmc0 = &ssp0;
		mmc2 = &ssp1;
		i2c0 = &i2c0;
	};

	memory {
		reg = <0x40000000 0x08000000>;   /* 128MB */
	};

	apb@80000000 {
		apbh@80000000 {
		
			ssp0: ssp@80010000 {
				compatible = "fsl,imx28-mmc";
				pinctrl-names = "default";
				pinctrl-0 = <&mmc0_4bit_pins_ts7553
					     &mmc0_sck_cfg
					     &en_sd_pwr>;
				broken-cd = <1>;	     
				bus-width = <4>;
				vmmc-supply = <&reg_vddio_sd0>;
				status = "okay";
			};

			ssp1: ssp@80012000 {
				compatible = "fsl,imx28-mmc";
				pinctrl-names = "default";
				pinctrl-0 = <&mmc1_4bit_pins
				  &en_sd_pwr>;
				broken-cd = <1>;
				bus-width = <4>;
				vmmc-supply = <&reg_vddio_sd0>;
				status = "okay";
			};

									
			ssp2: ssp@80014000 {
				#address-cells = <1>;
				#size-cells = <0>;
				compatible = "fsl,imx28-spi";
				pinctrl-names = "default";
				pinctrl-0 = <&spi_pins_lcd>;
				status = "okay";	
				
				spidev@0x00 {
					compatible = "spidev";
					spi-max-frequency = <20000000>;
					reg = <0>;
				};
			};
			
			pinctrl@80018000 {
				pinctrl-names = "default";
				
				en_sd_pwr: en_sd_pwr {
					fsl,pinmux-ids = <
						// EN_SD_POWER#
						MX28_PAD_PWM3__GPIO_3_28
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;					};

	
				mmc0_4bit_pins_ts7553: mmc0-4bit@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SSP0_DATA0__SSP0_D0
						MX28_PAD_SSP0_DATA1__SSP0_D1
						MX28_PAD_SSP0_DATA2__SSP0_D2
						MX28_PAD_SSP0_DATA3__SSP0_D3
						MX28_PAD_SSP0_CMD__SSP0_CMD						
						MX28_PAD_SSP0_SCK__SSP0_SCK
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				mmc1_4bit_pins: mmc1-4bit@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_GPMI_WRN__SSP1_SCK

						MX28_PAD_GPMI_RDY1__SSP1_CMD
						MX28_PAD_GPMI_D00__SSP1_D0
						MX28_PAD_GPMI_D01__SSP1_D1
						MX28_PAD_GPMI_D02__SSP1_D2
						MX28_PAD_GPMI_D03__SSP1_D3
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};
				
				mac0_pins_ts7553: mac0@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_ENET0_MDC__GPIO_4_0
						MX28_PAD_ENET0_MDIO__GPIO_4_1
						MX28_PAD_ENET0_RX_EN__ENET0_RX_EN
					 	MX28_PAD_ENET0_RXD0__ENET0_RXD0
						MX28_PAD_ENET0_RXD1__ENET0_RXD1
						MX28_PAD_ENET0_TX_EN__ENET0_TX_EN
						MX28_PAD_ENET0_TXD0__ENET0_TXD0
						MX28_PAD_ENET0_TXD1__ENET0_TXD1
						MX28_PAD_ENET_CLK__CLKCTRL_ENET

						// ETH_RESET#
						MX28_PAD_SSP0_DETECT__GPIO_2_9
	
						// EN_ETH_3.3V#
						MX28_PAD_LCD_D10__GPIO_1_10
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				spi_boot_pins_auart2: spi-boot-pins-auart2@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SSP2_SCK__AUART2_RX
						MX28_PAD_SSP2_MOSI__AUART2_TX
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				spi_boot_pins_auart3: spi-boot-pins-auart3@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SSP2_MISO__AUART3_RX
						MX28_PAD_SSP2_SS0__AUART3_TX
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				auart4_pins: auart4@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SAIF0_BITCLK__AUART4_RX
						MX28_PAD_SAIF0_SDATA0__AUART4_TX
						>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
			  	};

				spi_pins_lcd: spi2@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						/* LCD_SPI_CLK */
						MX28_PAD_SSP0_DATA7__SSP2_SCK

						/* LCD_SPI_MOSI */
						MX28_PAD_SSP0_DATA6__SSP2_CMD

						/* LCD_CMD# @ GPIO 68*/
						MX28_PAD_SSP0_DATA4__GPIO_2_4

						/* LCD_RESET @ GPIO 84 */
						MX28_PAD_SSP2_SS1__GPIO_2_20

						/* EN_LCD_BK_LT @ GPIO 85 */
						MX28_PAD_SSP2_SS2__GPIO_2_21

						/* LCD_CS# */
						MX28_PAD_SSP0_DATA5__SSP2_D3
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				can_enable_pins: can0_en_pin@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						// EN_CAN#
						MX28_PAD_LCD_RESET__GPIO_3_30
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				ts7553_232en_pins: ts7553_232en_pins@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						// EN_232_TRANS
						MX28_PAD_LCD_WR_RWN__GPIO_1_25
					>;
					fsl,drive-strength = <MXS_DRIVE_8mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};
					
			};
			
			can0: can@80032000 {
				pinctrl-names = "default";
				pinctrl-0 = <&can0_pins_a
				  &can_enable_pins>;
				xceiver-supply = <&reg_can_3v3>;
				status = "okay";
			};

			can1: can@80034000 {
				pinctrl-names = "default";
				pinctrl-0 = <&can1_pins_a>;
				xceiver-supply = <&reg_can_3v3>;
				status = "okay";
			};

		};

		apbx@80040000 {
			saif0: saif@80042000 {
				pinctrl-names = "default";
				pinctrl-0 = <&saif0_pins_a>;
				status = "disabled";
			};

			saif1: saif@80046000 {
				pinctrl-names = "default";
				pinctrl-0 = <&saif1_pins_a>;
				fsl,saif-master = <&saif0>;
				status = "disabled";
			};


			i2c0: i2c@80058000 {
				pinctrl-names = "default";
				pinctrl-0 = <&i2c0_pins_a>;
				clock-frequency = <100000>;
				status = "okay";

				rtc: m41t00s@68 {
					compatible = "m41t00";
					reg = <0x68>;
				};

				silabs: silabs@78 {
					compatible = "ts-wdt";
					reg = <0x78>;
				};
			};

			duart: serial@80074000 {
				pinctrl-names = "default";
				pinctrl-0 = <&duart_pins_a>;
				status = "okay";
			};

			usbphy0: usbphy@8007c000 {
				status = "okay";
								
			};

			usbphy1: usbphy@8007e000 {			   
				status = "okay";
			};


			auart0: serial@8006a000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&auart0_pins_a
					&ts7553_232en_pins
				>;
				xceiver-supply = <&reg_rs232_3v3>;
				status = "okay";
			};

			auart1: serial@8006c000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart1_2pins_a>;
				xceiver-supply = <&reg_rs232_3v3>;
				status = "okay";
			};

			auart2: serial@8006e000 {
				pinctrl-names = "default";
				pinctrl-0 = <&spi_boot_pins_auart2>;
				xceiver-supply = <&reg_rs232_3v3>;
				status = "okay";
			};

			auart3: serial@80070000 {
				pinctrl-names = "default";
				pinctrl-0 = <&spi_boot_pins_auart3>;
				xceiver-supply = <&reg_rs232_3v3>;
				status = "okay";
			};

			auart4: serial@80072000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart4_pins>;
				xceiver-supply = <&reg_rs232_3v3>;
				status = "okay";
			};

			pwm: pwm@80064000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pwm2_pins_a>;
				status = "okay";
			};
		};
	};

	ahb@80080000 {	   
		usb1: usb@80090000 {
			vbus-supply = <&reg_usb1_vbus>;		
			disable-over-current;
			dr_mode = "host";
			status = "okay";
		};

		mac0: ethernet@800f0000 {
			phy-mode = "rmii";
			pinctrl-names = "default";
			pinctrl-0 = <&mac0_pins_ts7553>;			      
			clocks = <&clks 57>, <&clks 57>, <&clks 64>;
			clock-names = "ipg", "ahb", "enet_out";
		 	phy-supply = <&phy_vbus>;		
			phy-reset-gpios = <&gpio2 9 GPIO_ACTIVE_LOW>;
			phy-reset-duration = <1000>;
			status = "okay";

			phy: ethernet@0 {	   
				device_type = "network";
				fixed-link = <0 1 100 0 0>;
			};
		};
	};

	regulators {
		compatible = "simple-bus";

		reg_3p3v: 3p3v {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
		
		
		reg_vddio_sd0: vddio-sd0 {
			compatible = "regulator-fixed";
			regulator-name = "vddio-sd0";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-boot-on;
			gpio = <&gpio3 28 0>;
			};
	
		
		reg_usb0_vbus: usb0_vbus {
			compatible = "regulator-fixed";
			regulator-name = "usb0_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&gpio3 12 0>;
			
		};

		reg_usb1_vbus: usb1_vbus {
			compatible = "regulator-fixed";
			regulator-name = "usb1_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&gpio1 27 0>;      // EN_HOST_USB_5V
			regulator-always-on;
			enable-active-high;
		};

		phy_vbus: phy_vbus {		
			compatible = "regulator-fixed";
			regulator-name = "phy-3v3";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio1 10 0>;
			enable-active-low;
			regulator-boot-on;
		};

		reg_can_3v3: can-3v3 {
			compatible = "regulator-fixed";
			regulator-name = "xceiver";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio3 30 0>;      // EN_CAN#
			enable-active-low;
		};

		reg_rs232_3v3: rs232-3v3 {
			compatible = "regulator-fixed";
			regulator-name = "rs232xceiver";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio1 25 0>;      // EN_232_TRANS
			enable-active-high;
			regulator-boot-on;
			regulator-always-on;
		};
	};

	rs485_txen_clock {
		compatible = "pwm-clock";
		#clock-cells = <0>;
		clock-frequency = <12240>;
		clock-output-names = "rs485_txen";
		pwms = <&pwm 2 81699>; // close enough for 9600 baud default
	};
};
